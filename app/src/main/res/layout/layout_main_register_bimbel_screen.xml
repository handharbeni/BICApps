<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.stepstone.stepper.StepperLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/stepperLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:ms_showBackButtonOnFirstStep="false"
        app:ms_showErrorStateOnBack="true"
        app:ms_stepperType="tabs"
        app:ms_stepperLayoutTheme="@style/DarkCustomStepperLayoutTheme"
        app:ms_activeStepColor="@color/colorPrimary"
        app:ms_backButtonColor="@color/darkBlack"
        app:ms_nextButtonColor="@color/colorPrimary"
        app:ms_completeButtonColor="@color/ms_white"
        app:ms_completeButtonBackground="@color/colorPrimary"
        app:ms_inactiveStepColor="@color/colorAccent">
    </com.stepstone.stepper.StepperLayout>
</android.support.constraint.ConstraintLayout>